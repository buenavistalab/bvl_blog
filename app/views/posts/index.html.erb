<section class="hero">
  <h2>
    Welcome to BuevaVistaLabBlog, the simplest way to start publishing with Ruby on Rails.
  </h2>
</section>

<% @posts.each do |post| %>
  <div class="columns">
    <div class="column is-four-fifths">
      <a href="<%= post_path(id: post.id) %>">
        <div class="card">
          <div class="card-image">
            <figure class="image is-full is-marginless">
              <%= image_tag post.featured_image if post.featured_image.attached? %>
            </figure>
          </div>
            <div class="card-content">
              <div class="media">
                <div class="media-content">
                    <p class="title is-4">
                      <%= post.title %>
                    </p>
                </div>
              </div>
              <div class="content">
                <%= post.content.to_plain_text.truncate(50) %>
              </div>
              <p>Autor: <%= post.author %> - <%= post.created_at.strftime("%d/%m/%Y") %></p>
            </div>
        </div>
      </a>
    </div>
  </div>
<% end %>
